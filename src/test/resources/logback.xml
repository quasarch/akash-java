<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="cloud.quasarch" level="INFO" />
    <logger name="cloud.quasarch.akash.impl.pagination" level="INFO" />

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
